---
const { title, btnId, btnTitle, url } = Astro.props;

interface Props {
  title?: string;
  btnId: string;
  btnTitle: string;
  url: string;
}
---

<astro-banner btnId={btnId}>
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7051727852360622"
     crossorigin="anonymous"></script>
 <!-- AnnouncementBanner -->
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="ca-pub-7051727852360622"
     data-ad-slot="7180289582"
     data-ad-format="auto"
     data-full-width-responsive="true">
    </ins>
<!-- <script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script> -->
</astro-banner>
<script>
  class AstroBanner extends HTMLElement {
    connectedCallback() {
      const btnId = this.getAttribute("btnId");
      const button = this.querySelector(`#${btnId}`);
      if (button != null) {
        button.addEventListener("click", () => this.remove());
      }
    }
  }

  customElements.define("astro-banner", AstroBanner);
</script>
